# Installation Variables:
FESTDATADIR = @FESTDATADIR@
VOICENAME = @VOICENAME@

# Commands
INSTALL = @INSTALL@
INSTALL_DATA = @INSTALL_DATA@
MKDIR_P = @MKDIR_P@


DESTINATION = $(FESTDATADIR)/voices/us/$(VOICENAME)

all: install

install:
	$(MKDIR_P) $(DESTINATION)
	$(INSTALL_DATA) festvox hts $(DESTINATION)

.PHONY: all install
